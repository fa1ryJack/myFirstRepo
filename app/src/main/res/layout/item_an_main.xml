<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:layout_marginTop="12dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="335dp"
        android:layout_height="136dp"
        android:background="@drawable/rounded"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/catalog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="ПЦР-тест на определение РНК коронавируса стандартный"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/catalog_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="72dp"
            android:text="2 дня"
            android:textColor="#939396"/>

        <TextView
            android:id="@+id/catalog_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="96dp"
            android:text="1800 ₽"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <Button
            android:id="@+id/add_an"
            android:layout_width="96dp"
            android:layout_height="40dp"
            android:layout_marginLeft="223dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/rounded"
            android:backgroundTint="#1A6FEE"
            android:text="Добавить"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"  />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

